pipeline {
    agent {
        dockerfile {
            filename 'src/Dockerfile'
        }
    }
    stages {
        stage ('Build against linux-master') {
            steps {
                dir('src') {
                    sh '''./ci/build_against_kernel --repo-ci master'''
                }
            }
        }
    }
}
